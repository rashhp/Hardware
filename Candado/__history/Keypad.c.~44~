#include <18f4550.h>
#fuses HSPLL, PLL5, USBDIV, NOWDT, CPUDIV1, NOPROTECT, NODEBUG, NOPBADEN, NOLVP, NOVREGEN
#use delay(clock = 48MHz)
#define LCD_DATA_PORT getenv("SFR:PORTB")
#include <lcd.c>
#include "KBD4x4.c"

void main(void){

char tecla;

lcd_init();
kbd_init();

lcd_gotoxy(1,1);
lcd_putc("Presiona tecla");
lcd_gotoxy(1,2);

while(true){
tecla = kbd_getc();
if(tecla != 0){
lcd_putc(tecla);
delay_ms(200);
}
}

}
