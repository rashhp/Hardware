#include <18F4550.h>
#fuses HSPLL, NOWDT, NOPROTECT, NOLVP, NOMCLR
#use delay(clock=4000000)  // Configuración para 4 MHz

// Definición de puertos
#byte PORTA = 0xF80  // Dirección de PORTA
#byte PORTB = 0xF81  // Dirección de PORTB
#byte PORTC = 0xF82  // Dirección de PORTC
#byte PORTD = 0xF83  // Dirección de PORTD
#byte TRISA = 0xF92  // Dirección de TRISA
#byte TRISB = 0xF93  // Dirección de TRISB
#byte TRISC = 0xF94  // Dirección de TRISC
#byte TRISD = 0xF95  // Dirección de TRISD
#byte TRISE = 0xF96  // Dirección de TRISE

// Configuración de los pines
#define BUTTON_A (input(PIN_E0)) // Botón conectado a RE0

// Inicialización de la pantalla LCD
#include <lcd.c>

void main() {
    // Configuración inicial de los puertos
    set_tris_a(0x00); // PORTA como salida
    set_tris_b(0x00); // PORTB como salida
    set_tris_c(0x00); // PORTC como salida
    set_tris_d(0x00); // PORTD como salida
    set_tris_e(0xFF);  // PORTE como entrada

    lcd_init(); // Configura la pantalla LCD
    lcd_gotoxy(5, 2);
    lcd_putc("BOTÓN A");

    while (1) {
        if (BUTTON_A == 0) { // Si se presiona el botón (RE0)
            lcd_gotoxy(1, 1);
            lcd_putc("PRESIONADO!");
            delay_ms(1000); // Muestra el mensaje por 1 segundo
            lcd_gotoxy(5, 2);
            lcd_putc("BOTÓN A"); // Regresa al mensaje original
            delay_ms(500); // Espera un poco para evitar rebotes
        }
    }
}

