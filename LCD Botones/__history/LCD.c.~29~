#include <18F4550.h>
#use delay(clock=4000000)
#include <lcd.c>



void main() {
    set_tris_A(0xFF); // RA0-RA3 como entradas
    set_tris_B(0x00); // RB como salidas
    lcd_init();
    output_B(0x00);
    int A=0;
    do {
        // Leer el estado de los botones
        if (!input(pin_A0)) { // Botón para A = 1
            A = 1;
            delay_ms(500); // Antirrebote
        }
        
        if (!input(pin_A1)) { // Botón para A = 2
            A = 2;
            delay_ms(500); // Antirrebote
        }
        
        if (!input(pin_A2)) { // Botón para A = 3
            A = 3;
            delay_ms(500); // Antirrebote
        }
        
        if (!input(pin_A3)) { // Botón para A = 4
            A = 4;
            delay_ms(500); // Antirrebote
        }

        // Imprimir en el LCD según el valor de A
        printf(lcd_putc, "\f"); // Limpiar pantalla
        switch (A) {
            case 0:
                lcd_gotoxy(1, 2);
                printf(lcd_putc, " ");
                break;
            case 1:
                lcd_gotoxy(1, 2);
                printf(lcd_putc, "Boton 1 <-");
                break;
            case 2:
                lcd_gotoxy(1, 2);
                printf(lcd_putc, "Boton 2 <-");
                break;
            case 3:
                lcd_gotoxy(1, 2);
                printf(lcd_putc, "Boton 3 <-");
                break;
            case 4:
                lcd_gotoxy(1, 2);
                printf(lcd_putc, "Boton 4 <-");
                break;
        }
        
        // Mostrar opciones adicionales
        lcd_gotoxy(1, 1);
        printf(lcd_putc, "Pulsa Boton");
        
    } while (true);
}

