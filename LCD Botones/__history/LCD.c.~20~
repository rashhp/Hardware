#include <18F4550.h>
#fuses HSPLL, PLL5, USBDIV, NOWDT, CPUDIV1, NOPROTECT, NODEBUG, NOPBADEN, NOLVP, NOVREGEN
#use delay(clock=48MHz)
#define LCD_DATA_PORT getenv("SFR:PORTB")
#include <lcd.c>

#define BUTTON_PIN input(PIN_E0) // Define el pin del botón

void main(void) {
    lcd_init(); // Configura nuestra pantalla LCD y establece velocidad de comunicación
    lcd_gotoxy(1, 1);
    lcd_putc("Presiona el boton");

    while (true) {
        if (BUTTON_PIN == 0) { // Comprueba si el botón está presionado
            lcd_gotoxy(1, 2); // Mueve el cursor a la segunda línea
            lcd_putc("Boton presionado!");
            delay_ms(1000); // Espera un segundo para mostrar el mensaje
            lcd_gotoxy(1, 1); // Regresa a la primera línea
            lcd_putc("Presiona el boton");
            while (BUTTON_PIN == 0); // Espera a que se suelte el botón
        }
    }
}

